<%- include('./partials/header.ejs') %>

<div class="container">
  <!-- Content here -->
  <div class="row">
    <div class="col-sm-6 mt-5">
      <h2 class="text-center alert-success">Add New Student</h2>
      <form method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" class="form-control" id="name" />
        </div>
        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input type="text" name="age" class="form-control" id="age" />
        </div>
        <div class="mb-3">
          <label for="fees" class="form-label">Fees</label>
          <input type="text" name="fees" class="form-control" id="fees" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <div class="col-sm-6 mt-5">
      <h2 class="text-center alert-danger">Lists Of Student</h2>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Fees</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% let i = 1 %>

          <% data.forEach((item)=>{ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= item.name %></td>
            <td><%= item.age %></td>
            <td><%= item.fees %></td>
            <td>
              <form method="get" action="/edit/<%= item._id %>" class="d-inline">
                  <button type="submit" class="btn">
                    <i class="fa-solid fa-pen-to-square text-info"></i>
                  </button>
              </form>
              <form method="post" action="/delete/<%= item._id %>" class="d-inline">
                <button type="submit" class="btn">
                  <i class="fa-solid fa-trash text-danger"></i>
                </button>
            </form>
              
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
